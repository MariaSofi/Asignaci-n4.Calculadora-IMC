<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="149dp"
        android:layout_height="147dp"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cheemss" />

    <Button
        android:id="@+id/calculate"
        android:layout_width="209dp"
        android:layout_height="43dp"
        android:layout_marginTop="32dp"
        android:background="#FFB1B1"
        android:backgroundTint="#FFB9B9"
        android:text="CALCULATE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/height"
        app:strokeColor="#FABFBF" />

    <TextView
        android:id="@+id/imc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/calculate" />

    <TextView
        android:id="@+id/range"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imc" />

    <EditText
        android:id="@+id/weight" app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="303dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="kilos"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="281dp" />

    <EditText
        android:id="@+id/height"
        android:layout_width="308dp"
        android:layout_height="44dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:hint="Estatura"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="363dp"
        app:layout_constraintTop_toBottomOf="@+id/weight"/>

</androidx.constraintlayout.widget.ConstraintLayout>